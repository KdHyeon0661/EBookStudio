<UserControl x:Class="EBookStudio.Views.FindAccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <Border Background="White" Width="400" VerticalAlignment="Center" CornerRadius="12" Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Color="#AAA" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="계정 찾기" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <TextBlock Text="이메일 주소" Foreground="#666" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding Email}" Height="40" VerticalContentAlignment="Center" Padding="10,0" BorderBrush="#DDD" BorderThickness="1"/>
                    <Button Grid.Column="1" Content="인증번호 발송" Command="{Binding SendCodeCommand}" Margin="10,0,0,0" Padding="10,0" Height="40" Background="#EEE" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <StackPanel Visibility="{Binding IsCodeSent, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="인증번호 입력" Foreground="#666" Margin="0,5,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding Code}" Height="40" VerticalContentAlignment="Center" Padding="10,0" BorderBrush="#DDD" BorderThickness="1"/>
                        <Button Grid.Column="1" Content="확인" Command="{Binding VerifyCodeCommand}" Margin="10,0,0,0" Padding="15,0" Height="40" Background="#333" Foreground="White" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </StackPanel>

                <StackPanel Visibility="{Binding IsVerified, Converter={StaticResource BoolToVis}}" Background="#F8F9FA" Margin="0,10,0,20">
                    <TextBlock Text="✅ 인증되었습니다." Foreground="Green" FontWeight="Bold" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="회원님의 아이디: "/>
                        <TextBlock Text="{Binding FoundUsername}" FontWeight="Bold" Foreground="Blue"/>
                    </StackPanel>

                    <TextBlock Text="새 비밀번호 설정" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewPassword}" Height="40" VerticalContentAlignment="Center" Padding="10,0" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,10"/>

                    <Button Content="비밀번호 변경하기" Command="{Binding ResetPasswordCommand}" Height="45" Background="#333" Foreground="White" BorderThickness="0" FontWeight="SemiBold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <Button Content="로그인 화면으로 돌아가기" 
                        Command="{Binding GoBackCommand}" 
                        Background="Transparent" BorderThickness="0" Foreground="#888" 
                        Cursor="Hand" Margin="0,10,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>