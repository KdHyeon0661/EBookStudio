<UserControl x:Class="EBookStudio.Views.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:EBookStudio.ViewModels"
             Width="320" Height="400">

    <UserControl.DataContext>
        <vm:SettingViewModel/>
    </UserControl.DataContext>

    <Border Background="White" CornerRadius="12" Padding="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.4"/>
        </Border.Effect>

        <StackPanel>
            <TextBlock Text="환경 설정" FontWeight="Bold" FontSize="18" Margin="0,0,0,20"/>

            <TextBlock Text="테마" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{Binding SetThemeCommand}" CommandParameter="Light"
                        Content="기본" Height="40" Margin="0,0,5,0"
                        Background="White" Foreground="#333" BorderBrush="#DDD" BorderThickness="1">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="1" Command="{Binding SetThemeCommand}" CommandParameter="Sepia"
                        Content="세피아" Height="40" Margin="2,0,2,0"
                        Background="#F4ECD8" Foreground="#5F4B32" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="2" Command="{Binding SetThemeCommand}" CommandParameter="Dark"
                        Content="다크" Height="40" Margin="5,0,0,0"
                        Background="#333" Foreground="#DDD" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <TextBlock Text="글꼴" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ComboBox ItemsSource="{Binding FontList}" SelectedItem="{Binding Settings.FontFamily}"
                      Height="40" Margin="0,0,0,20" VerticalContentAlignment="Center" Padding="10,0"/>

            <TextBlock Text="줄 간격" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Slider Minimum="25" Maximum="60" Value="{Binding Settings.LineHeight}" 
                        IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding Settings.LineHeight}" 
                           HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#888"/>
            </Grid>

        </StackPanel>
    </Border>
</UserControl>