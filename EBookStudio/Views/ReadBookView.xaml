<UserControl x:Class="EBookStudio.Views.ReadBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EBookStudio.ViewModels"
             xmlns:helpers="clr-namespace:EBookStudio.Helpers"
             xmlns:views="clr-namespace:EBookStudio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" 
             Focusable="True">

    <UserControl.InputBindings>
        <KeyBinding Key="Left" Command="{Binding PrevPageCommand}"/>
        <KeyBinding Key="Right" Command="{Binding NextPageCommand}"/>
        <KeyBinding Key="Esc" Command="{Binding CloseCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBoolToVisibilityConverter x:Key="InvBoolToVis"/>

        <Style x:Key="MemoLinkStyle" TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#007AFF"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="MusicSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="TrackBackground" Grid.Row="1" Height="4" 
                                    Background="#DDD" CornerRadius="2" VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Background="#007AFF">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="12" Height="12" Fill="#007AFF" Stroke="White" StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5E5E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColorMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Header" Value=""/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="ColorBorder" Width="24" Height="24" CornerRadius="12" 
                                Background="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                BorderBrush="#DDD" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="ColorBorder" Property="Width" Value="28"/>
                                <Setter TargetName="ColorBorder" Property="Height" Value="28"/>
                                <Setter TargetName="ColorBorder" Property="BorderBrush" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{Binding Source={x:Static helpers:SettingsService.Instance}, Path=Background}">

        <RichTextBox x:Name="BookViewer"
                     IsReadOnly="True"
                     IsDocumentEnabled="True"
                     Focusable="True"
                     BorderThickness="0"
                     Margin="60,80,60,60"
                     helpers:RichTextBoxHelper.Content="{Binding CurrentPageContent}"
                     Background="{Binding Source={x:Static helpers:SettingsService.Instance}, Path=Background}"
                     PreviewMouseLeftButtonDown="BookViewer_PreviewMouseLeftButtonDown"
                     PreviewMouseMove="BookViewer_PreviewMouseMove"
                     PreviewMouseLeftButtonUp="BookViewer_PreviewMouseLeftButtonUp">

            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0,0,0,20"/>
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="FontFamily" Value="{Binding Source={x:Static helpers:SettingsService.Instance}, Path=FontFamily}"/>
                    <Setter Property="LineHeight" Value="{Binding Source={x:Static helpers:SettingsService.Instance}, Path=LineHeight}"/>
                    <Setter Property="Foreground" Value="{Binding Source={x:Static helpers:SettingsService.Instance}, Path=Foreground}"/>
                    <Setter Property="TextAlignment" Value="Justify"/>
                </Style>
            </RichTextBox.Resources>

            <RichTextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="🖍️ 하이라이트">
                        <MenuItem.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5"/>
                            </ItemsPanelTemplate>
                        </MenuItem.ItemsPanel>
                        <MenuItem Tag="#FFFF00" Click="OnHighlightColorClick" Style="{StaticResource ColorMenuItemStyle}" ToolTip="노랑"/>
                        <MenuItem Tag="#00FF00" Click="OnHighlightColorClick" Style="{StaticResource ColorMenuItemStyle}" ToolTip="초록"/>
                        <MenuItem Tag="#00FFFF" Click="OnHighlightColorClick" Style="{StaticResource ColorMenuItemStyle}" ToolTip="하늘"/>
                        <MenuItem Tag="#FF00FF" Click="OnHighlightColorClick" Style="{StaticResource ColorMenuItemStyle}" ToolTip="분홍"/>
                        <MenuItem Tag="Transparent" Click="OnHighlightColorClick" Header="❌" Width="30" Height="30" ToolTip="지우기"/>
                    </MenuItem>
                    <MenuItem Header="밑줄" Tag="Underline" Click="OnHighlightColorClick"/>
                    <MenuItem Header="📝 메모 남기기" Click="OnContextMenuMemoClick"/>
                </ContextMenu>
            </RichTextBox.ContextMenu>
        </RichTextBox>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Command="{Binding PrevPageCommand}" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="이전 페이지">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Column="2" Command="{Binding NextPageCommand}" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="다음 페이지">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Border Height="60" VerticalAlignment="Top" Background="White"
                BorderBrush="#EEE" BorderThickness="0,0,0,1"
                Visibility="{Binding IsMenuVisible, Converter={StaticResource BoolToVis}}">
            <Grid Margin="20,0">
                <TextBlock Text="{Binding BookTitle}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="16" FontWeight="Bold" Foreground="#333"
                           TextTrimming="CharacterEllipsis" MaxWidth="600"/>
                <Button Command="{Binding CloseCommand}"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Foreground="#333"/>
                        <TextBlock Text=" 뒤로 가기" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#333" Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>
                <ToggleButton Command="{Binding ToggleBookmarkCommand}"
                              IsChecked="{Binding IsBookmarked, Mode=OneWay}"
                              HorizontalAlignment="Right" VerticalAlignment="Center"
                              Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <TextBlock Text="🔖" Opacity="0.3" FontSize="20" ToolTip="책갈피 추가"
                                           Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource InvBoolToVis}}"/>
                                <TextBlock Text="🔖" Foreground="#FFD700" FontSize="20" ToolTip="책갈피 해제"
                                           Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVis}}">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Gold"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Grid>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
            </Grid>
        </Border>

        <Border Height="110" VerticalAlignment="Bottom" Background="#F8F9FA"
                BorderBrush="#EEE" BorderThickness="0,1,0,0"
                Visibility="{Binding IsMenuVisible, Converter={StaticResource BoolToVis}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Direction="90" Color="#AAA" Opacity="0.3" ShadowDepth="5"/>
            </Border.Effect>

            <Grid Margin="20,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10,0,10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider Minimum="1" Maximum="{Binding TotalPages}"
                            Value="{Binding CurrentPageNum}"
                            IsSnapToTickEnabled="True" TickFrequency="1"
                            VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding PageStatus}" Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="#555"/>
                </Grid>

                <UniformGrid Grid.Row="1" Columns="4">

                    <Border Background="#F0F0F5" CornerRadius="8" Margin="3" Padding="5,2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Slider Grid.Row="0" Style="{StaticResource MusicSliderStyle}"
                                    Minimum="0" Maximum="{Binding TotalDuration}" 
                                    Value="{Binding CurrentPosition}"
                                    IsMoveToPointEnabled="True" Margin="5,5,5,0"/>

                            <Button Grid.Row="1" Command="{Binding ToggleMusicCommand}"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontSize="24" FontWeight="Bold" Foreground="#007AFF">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="▶"/>
                                            <Setter Property="Margin" Value="4,0,0,0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMusicPlaying}" Value="True">
                                                    <Setter Property="Text" Value="⏸"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>
                        </Grid>
                    </Border>

                    <Button Command="{Binding ToggleTocCommand}" Content="📑 목차" Style="{StaticResource MenuBtnStyle}"/>

                    <Button Command="{Binding OpenNoteCommand}" Content="📝 노트" Style="{StaticResource MenuBtnStyle}"/>

                    <Button Command="{Binding OpenSettingCommand}" Content="⚙️ 설정" Style="{StaticResource MenuBtnStyle}" Click="OnSettingButtonClick"/>
                </UniformGrid>
            </Grid>
        </Border>

        <Border Width="300" HorizontalAlignment="Left" Background="White"
                BorderBrush="#DDD" BorderThickness="0,0,1,0"
                Visibility="{Binding IsTocVisible, Converter={StaticResource BoolToVis}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Direction="0" Color="#AAA" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="목차" Margin="20,30" FontWeight="Bold" FontSize="20"/>
                <ListBox ItemsSource="{Binding TableOfContents}" SelectedIndex="{Binding SelectedChapterIndex}"
                         Margin="0,80,0,0" BorderThickness="0" Background="Transparent">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="20,15"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <Grid x:Name="MemoInputOverlay" Visibility="Collapsed" Background="#7F000000">
            <Border Background="White" Width="320" Height="280" CornerRadius="12" Padding="25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="메모 입력" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                    <TextBox x:Name="MemoTextBox" Height="130" TextWrapping="Wrap" AcceptsReturn="True" 
                             BorderBrush="#DDD" BorderThickness="1" Padding="8" FontSize="14" VerticalScrollBarVisibility="Auto"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="취소" Click="OnCancelMemoClick" Width="80" Height="32" Margin="0,0,10,0" Background="#EEE" BorderThickness="0"/>
                        <Button Content="저장" Click="OnSaveMemoClick" Width="80" Height="32" Background="#333" Foreground="White" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <Grid x:Name="MemoViewOverlay" Visibility="Collapsed" Background="#7F000000" MouseDown="OnCloseMemoViewClick">
            <Border Background="#FFFFE0" Width="320" MinHeight="150" MaxHeight="400" CornerRadius="12" Padding="25" MouseDown="OnBorderClick">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="📝 저장된 메모" FontWeight="Bold" FontSize="16" Foreground="#555" VerticalAlignment="Center"/>
                        <Button Content="✕" Click="OnCloseMemoViewClick" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="#999"/>
                    </Grid>
                    <ScrollViewer MaxHeight="280" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="MemoContentBlock" TextWrapping="Wrap" FontSize="15" LineHeight="24"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>

        <Grid x:Name="SettingViewOverlay" Visibility="Collapsed" Background="#80000000" MouseDown="OnCloseSettingClick">
            <views:SettingView HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="OnBorderClick"/>
        </Grid>

    </Grid>
</UserControl>