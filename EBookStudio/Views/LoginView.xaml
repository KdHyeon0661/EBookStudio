<UserControl x:Class="EBookStudio.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Background="#F8F9FA">
		<Border Background="White" Width="400" VerticalAlignment="Center" CornerRadius="12" Padding="40">
			<Border.Effect>
				<DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Color="#AAA" Opacity="0.15"/>
			</Border.Effect>

			<StackPanel>
				<TextBlock Text="로그인" FontSize="28" FontWeight="Bold" Foreground="#333"
                           HorizontalAlignment="Center" Margin="0,0,0,30" FontFamily="Segoe UI"/>

				<TextBlock Text="Username" Foreground="#666" Margin="0,0,0,5" FontSize="14"/>
				<TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="40" VerticalContentAlignment="Center" Padding="10,0"
                         BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,15"/>

				<TextBlock Text="Password" Foreground="#666" Margin="0,0,0,5" FontSize="14"/>
				<PasswordBox x:Name="pbLogin"
                             Height="40" VerticalContentAlignment="Center" Padding="10,0"
                             BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,30"/>

				<Button Content="로그인"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=pbLogin}"
                        IsDefault="True"
                        Height="45" Background="#333" Foreground="White"  BorderThickness="0"
                        FontSize="16" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,0,20">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="6"/>
						</Style>
					</Button.Resources>
				</Button>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

					<Button Content="아이디/비밀번호 찾기"
                            Command="{Binding FindAccountCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#888"
                            Cursor="Hand" FontSize="13" Margin="0,0,10,0">
						<Button.Template>
							<ControlTemplate TargetType="Button">
								<TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline"/>
							</ControlTemplate>
						</Button.Template>
					</Button>

					<TextBlock Text="|" Foreground="#DDD" Margin="0,0,10,0"/>

					<Button Content="회원가입"
                            Command="{Binding GoRegisterCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#333" FontWeight="SemiBold"
                            Cursor="Hand" FontSize="13"/>
				</StackPanel>

			</StackPanel>
		</Border>
	</Grid>
</UserControl>