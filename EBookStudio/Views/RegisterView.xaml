<UserControl x:Class="EBookStudio.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:EBookStudio.Helpers">

    <UserControl.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">

        <Border Background="White" Width="400" VerticalAlignment="Center" CornerRadius="12" Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Color="#AAA" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="회원가입" FontSize="28" FontWeight="Bold" Foreground="#333"
                           HorizontalAlignment="Center" Margin="0,0,0,30" FontFamily="Segoe UI"/>

                <TextBlock Text="Username" Foreground="#666" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Height="40" VerticalContentAlignment="Center" Padding="10,0" 
                         BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,15"/>

                <TextBlock Text="Email" Foreground="#666" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Height="40" VerticalContentAlignment="Center" Padding="10,0" BorderBrush="#DDD"
                             IsEnabled="{Binding IsEmailSent, Converter={StaticResource InverseBoolConverter}}"/>
                    <Button Grid.Column="1" Content="인증 요청" Height="40" Padding="15,0" Margin="10,0,0,0"
                            Command="{Binding SendCodeCommand}" Background="#EEE" BorderThickness="0"
                            IsEnabled="{Binding IsEmailSent, Converter={StaticResource InverseBoolConverter}}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <StackPanel Visibility="{Binding IsEmailSent, Converter={StaticResource BoolToVisConverter}}">
                    <TextBlock Text="인증 번호" Foreground="#666" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="40" VerticalContentAlignment="Center" Padding="10,0" BorderBrush="#DDD"
                                 IsEnabled="{Binding IsVerified, Converter={StaticResource InverseBoolConverter}}"/>
                        <Button Grid.Column="1" Content="확인" Height="40" Padding="15,0" Margin="10,0,0,0"
                                Command="{Binding VerifyCodeCommand}" Background="#333" Foreground="White" BorderThickness="0"
                                IsEnabled="{Binding IsVerified, Converter={StaticResource InverseBoolConverter}}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                    <TextBlock Text="✓ 인증되었습니다." Foreground="Green" Margin="0,-10,0,15" FontSize="12"
                               Visibility="{Binding IsVerified, Converter={StaticResource BoolToVisConverter}}"/>
                </StackPanel>

                <TextBlock Text="Password" Foreground="#666" Margin="0,0,0,5"/>
                <PasswordBox x:Name="pbReg" Height="40" VerticalContentAlignment="Center" Padding="10,0"
                             BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,15"/>

                <TextBlock Text="Confirm Password" Foreground="#666" Margin="0,0,0,5"/>
                <PasswordBox x:Name="pbConfirm" Height="40" VerticalContentAlignment="Center" Padding="10,0"
                             BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,30"/>

                <Button Content="가입하기" Click="OnRegisterClick"
                        Height="45" Background="#333" Foreground="White" BorderThickness="0"
                        FontSize="16" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,0,15"
                        IsEnabled="{Binding IsVerified}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="로그인 화면으로 돌아가기" 
                        Command="{Binding BackCommand}" 
                        Background="Transparent" BorderThickness="0" Foreground="#666"
                        Cursor="Hand" HorizontalAlignment="Center" FontSize="13"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>