<Window x:Class="EBookStudio.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EBookStudio.ViewModels"
        xmlns:v="clr-namespace:EBookStudio.Views"
        xmlns:helpers="clr-namespace:EBookStudio.Helpers"
        Title="EBookStudio" 
        Height="768" Width="1150" 
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI, Malgun Gothic">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1"
                Visibility="{Binding IsTopBarVisible, Converter={StaticResource BoolToVis}}">

            <Grid Margin="20,10">
                <Button Command="{Binding GoHomeCommand}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="36" Cursor="Hand" 
                        Background="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <TextBlock Text="EBookStudio" FontSize="20" FontWeight="Bold" Foreground="#333" 
                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Visibility="{Binding IsAuthView, Converter={StaticResource InverseBoolToVis}}">

                    <StackPanel Orientation="Horizontal" 
                        Visibility="{Binding IsLoggedIn, Converter={StaticResource InverseBoolToVis}}">

                        <Button Content="로그인" 
                        Command="{Binding GoLoginCommand}"
                        IsEnabled="{Binding IsNetworkAvailable}" 
                        Background="White" BorderBrush="#333" BorderThickness="1" Foreground="#333"
                        FontSize="14" Height="36" Padding="20,0" Margin="0,0,10,0" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Content="회원가입" 
                        Command="{Binding GoRegisterCommand}"
                        IsEnabled="{Binding IsNetworkAvailable}"
                        Background="#333" Foreground="White" BorderThickness="0"
                        FontSize="14" Height="36" Padding="20,0" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                        Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="{Binding LoggedInUser, StringFormat='{}{0} 님'}" 
                           VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,15,0"/>
                        <Button Command="{Binding GoMyPageCommand}" Content="마이페이지" Margin="0,0,10,0"
                        Width="90" Height="36" Background="Transparent" BorderBrush="#333" BorderThickness="1" Foreground="#333" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Command="{Binding LogoutCommand}" Content="로그아웃"
                        Width="80" Height="36" Background="#F2F2F7" BorderThickness="0" Foreground="#FF3B30" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>

        <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:LibraryViewModel}">
                    <v:LibraryView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                    <v:LoginView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:RegisterViewModel}">
                    <v:RegisterView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:FindAccountViewModel}">
                    <v:FindAccountView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ReadBookViewModel}">
                    <v:ReadBookView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:NoteViewModel}">
                    <v:NoteView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:MyPageViewModel}">
                    <v:MyPageView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>